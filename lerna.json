{
  "version": "independent",
  "npmClient": "pnpm",
  "conventionalCommits": true,
  "exact": true,
  "packages": ["packages/*"],
  "command": {
    "version": {
      "allowBranch": ["main"],
      "message": "chore(release): publish"
    },
    "publish": {
      "npmClient": "npm"
    },
    "init": {
      "exact": true
    }
  }
}
